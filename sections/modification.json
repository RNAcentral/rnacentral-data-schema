{
        "$schema": "http://json-schema.org/draft-04/schema#",
        "title": "Modification",
        "description": "A description of a modification that has occured",
        "id": "modification.json#",
        "type": "object",
        "required": ["index", "shortName", "fullName"],
        "additionalProperties": false,
        "properties": {
                "index": {
                        "type": "number",
                        "description": "0 based index of the modificaton"
                },

                "shortName": {
                        "type": "string",
                        "description": "A simple name of the modification. Should be a human readable name"
                },
                "fullName": {
                        "type": "string",
                        "description": "Should be the full name of the moficiation"
                }
        }
}
